/*
* 插件声明文件
* */
{
    "manifest_version": 2,  // 声明文件格式版本

    "name": "百度Hi Todo",
    "description": "百度Hi Todo浏览器扩展插件",
    "version": "0.2",

    // 浏览器扩展按钮行为
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },

    // 页面注入脚本
    "content_scripts": [
        {
            "matches": ["http://*/*"],
            "js": ["js/content-scripts.js"]
        }
    ],

    // 一直在后台运行的js
    "background": {
        "scripts": ["js/background.js"]
    },

    // 权限申请
    "permissions": [
        "http://*.sinaimg.cn/*",
        "background",
        "contextMenus"
    ]
}